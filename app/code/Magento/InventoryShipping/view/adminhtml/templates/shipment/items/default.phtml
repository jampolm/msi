        <?php if ($block->canShipPartiallyItem()): ?>
        <div class="admin__control-table-wrapper">
            <table class="data-table admin__control-table">
                <thead>
                <tr class="headings">
                    <th><?= /* @escapeNotVerified */ __('Source Code') ?></th>
