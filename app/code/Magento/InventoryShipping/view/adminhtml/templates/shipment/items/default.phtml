    <script>
        if (!window.shipmentItems) {
            window.shipmentItems = [];
        }
        window.shipmentItems[<?= /* @escapeNotVerified */ $item->getOrderItemId() ?>] = {
            sku: '<?= $block->escapeHtml($item->getSku()) ?>',
            qty: '<?= /* @escapeNotVerified */ $item->getQty() ?>'
