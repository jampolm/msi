<script>
    require([
        'jquery'
    ], function ($) {
        var orderItemId = <?= /* @escapeNotVerified */ $item->getOrderItemId() ?>;
        $('#manually_add_'+orderItemId).on('click', function () {
            getDataManually(orderItemId);
        });
    });
